<% layout("layouts/boilerplate") %>

<div class="container mt-4">
    <h2 class="fw-bold mb-4"><i class="fa-solid fa-calendar-days"></i> My Bookings</h2>

    <% if(bookings.length === 0) { %>
        <div class="text-center py-5">
            <i class="fa-regular fa-calendar-xmark" style="font-size: 5rem; color: #ccc;"></i>
            <h4 class="mt-3 text-muted">No bookings yet</h4>
            <p class="text-muted">Explore amazing places and make your first booking!</p>
            <a href="/listings" class="btn btn-primary mt-3" style="background-color: #fe424f; border: none;">
                Browse Listings
            </a>
        </div>
    <% } else { %>
        <div class="row">
            <% bookings.forEach(booking => { %>
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="<%= booking.listing.image.url %>" 
                                     class="img-fluid h-100 w-100" 
                                     style="object-fit: cover; border-radius: 10px 0 0 10px;" 
                                     alt="<%= booking.listing.title %>">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-1">
                                            <a href="/listings/<%= booking.listing._id %>" class="text-decoration-none text-dark">
                                                <%= booking.listing.title %>
                                            </a>
                                        </h5>
                                        <% if(booking.status === 'confirmed') { %>
                                            <span class="badge bg-success">Confirmed</span>
                                        <% } else if(booking.status === 'pending') { %>
                                            <span class="badge bg-warning">Pending</span>
                                        <% } else if(booking.status === 'cancelled') { %>
                                            <span class="badge bg-danger">Cancelled</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Completed</span>
                                        <% } %>
                                    </div>
                                    
                                    <p class="text-muted small mb-2">
                                        <i class="fa-solid fa-location-dot"></i> 
                                        <%= booking.listing.location %>
                                    </p>
                                    
                                    <hr>
                                    
                                    <div class="small">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span><i class="fa-solid fa-calendar-days"></i> Check-in:</span>
                                            <strong><%= new Date(booking.checkIn).toLocaleDateString('en-IN') %></strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-1">
                                            <span><i class="fa-solid fa-calendar-days"></i> Check-out:</span>
                                            <strong><%= new Date(booking.checkOut).toLocaleDateString('en-IN') %></strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-1">
                                            <span><i class="fa-solid fa-moon"></i> Nights:</span>
                                            <strong><%= booking.numberOfNights %></strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-1">
                                            <span><i class="fa-solid fa-users"></i> Guests:</span>
                                            <strong><%= booking.guests %></strong>
                                        </div>
                                    </div>
                                    
                                    <hr>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <small class="text-muted">Total Price</small>
                                            <h5 class="mb-0 text-danger">â‚¹<%= booking.totalPrice.toLocaleString('en-IN') %></h5>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <a href="/bookings/<%= booking._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>
                                            <% if(booking.status !== 'cancelled' && new Date(booking.checkIn) > new Date()) { %>
                                                <form method="POST" action="/bookings/<%= booking._id %>/cancel?_method=PUT" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('Are you sure you want to cancel this booking?')">
                                                        <i class="fa-solid fa-xmark"></i>
                                                    </button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>
