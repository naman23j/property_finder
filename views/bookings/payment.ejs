<% layout("layouts/boilerplate") %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-4 text-center">
                        <i class="fa-solid fa-credit-card"></i> Complete Your Payment
                    </h3>

                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">Booking Summary</h5>
                        <div class="d-flex align-items-center mb-3">
                            <img src="<%= listing.image.url %>" 
                                 alt="<%= listing.title %>" 
                                 class="rounded me-3" 
                                 style="width: 100px; height: 100px; object-fit: cover;">
                            <div>
                                <h6 class="mb-1"><%= listing.title %></h6>
                                <p class="text-muted small mb-0">
                                    <i class="fa-solid fa-location-dot"></i> <%= listing.location %>
                                </p>
                            </div>
                        </div>

                        <hr>

                        <div class="small">
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fa-solid fa-calendar-days"></i> Check-in:</span>
                                <strong><%= new Date(checkIn).toLocaleDateString('en-IN') %></strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fa-solid fa-calendar-days"></i> Check-out:</span>
                                <strong><%= new Date(checkOut).toLocaleDateString('en-IN') %></strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fa-solid fa-moon"></i> Nights:</span>
                                <strong><%= numberOfNights %></strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fa-solid fa-users"></i> Guests:</span>
                                <strong><%= guests %></strong>
                            </div>
                        </div>

                        <hr>

                        <div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>₹<%= listing.price %> × <%= numberOfNights %> nights</span>
                                <span>₹<%= totalPrice.toLocaleString('en-IN') %></span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <h5>Total Amount</h5>
                                <h4 class="text-danger mb-0">₹<%= totalPrice.toLocaleString('en-IN') %></h4>
                            </div>
                        </div>
                    </div>

                    <button id="payButton" class="btn w-100 btn-lg" 
                            style="background-color: #fe424f; color: white; font-weight: 600;">
                        <i class="fa-solid fa-lock"></i> Pay Securely with Razorpay
                    </button>

                    <p class="text-center text-muted small mt-3 mb-0">
                        <i class="fa-solid fa-shield-halved"></i> Your payment is secured with Razorpay
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<form id="paymentForm" action="/bookings/verify-payment" method="POST" style="display: none;">
    <input type="hidden" name="razorpay_order_id" id="razorpay_order_id">
    <input type="hidden" name="razorpay_payment_id" id="razorpay_payment_id">
    <input type="hidden" name="razorpay_signature" id="razorpay_signature">
    <input type="hidden" name="listing_id" value="<%= listing._id %>">
    <input type="hidden" name="checkIn" value="<%= checkIn %>">
    <input type="hidden" name="checkOut" value="<%= checkOut %>">
    <input type="hidden" name="guests" value="<%= guests %>">
    <input type="hidden" name="numberOfNights" value="<%= numberOfNights %>">
    <input type="hidden" name="totalPrice" value="<%= totalPrice %>">
</form>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    document.getElementById('payButton').onclick = function(e) {
        e.preventDefault();
        
        const options = {
            key: '<%= razorpayKeyId %>',
            // amount: <%= order.amount %>,
            currency: '<%= order.currency %>',
            name: 'EasyStay',
            description: 'Booking at <%= listing.title %>',
            order_id: '<%= order.id %>',
            handler: function (response) {
                document.getElementById('razorpay_order_id').value = response.razorpay_order_id;
                document.getElementById('razorpay_payment_id').value = response.razorpay_payment_id;
                document.getElementById('razorpay_signature').value = response.razorpay_signature;
                document.getElementById('paymentForm').submit();
            },
            prefill: {
                name: '<%= currUser.username %>',
                email: '<%= currUser.email %>'
            },
            theme: {
                color: '#fe424f'
            }
        };
        
        const rzp = new Razorpay(options);
        rzp.open();
    };
</script>
