
<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1 class="col-8 offset-2">SignUp on WonderPlace</h1>
        <form  method="POST" action="/signup"  novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" 
                id="username" 
                class="form-control"
                 placeholder="username"
                  type="text" required />
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>

            <div class="mb-3">
                <label for="email" class="Email">Username</label>
                <input name="email"  
                id="email" 
                class="form-control"
                 placeholder="Email"
                  type="email" required />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password"
                id="password"   
                class="form-control"
                  type="password" required />
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>