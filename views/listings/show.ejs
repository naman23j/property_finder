
<% layout("layouts/boilerplate") %>

<div class="container mt-4">
    <div class="row">
        <!-- Listing Details -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 400px; object-fit: cover; border-radius: 10px 10px 0 0;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="fw-bold mb-2"><%= listing.title %></h2>
                            <p class="text-muted mb-0">
                                <i class="fa-solid fa-location-dot"></i> <%= listing.location %>, <%= listing.country %>
                            </p>
                        </div>
                        <div class="text-end">
                            <h3 class="text-danger mb-0">₹<%= listing.price.toLocaleString("en-IN") %></h3>
                            <small class="text-muted">per night</small>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="mb-3">
                        <h5 class="fw-bold mb-2">About this place</h5>
                        <p class="text-muted"><%= listing.description %></p>
                    </div>
                    
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa-solid fa-user-circle fs-3 text-muted me-2"></i>
                        <div>
                            <small class="text-muted d-block">Hosted by</small>
                            <strong><%= listing.owner.username %></strong>
                        </div>
                    </div>

                    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                    <hr>
                    <div class="d-flex gap-2 mb-3">
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning flex-fill">
                            <i class="fa-solid fa-pen-to-square"></i> Edit Listing
                        </a>
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="flex-fill">
                            <button class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this listing?')">
                                <i class="fa-solid fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                    <a href="/listings/<%= listing._id %>/bookings" class="btn btn-info w-100">
                        <i class="fa-solid fa-calendar-days"></i> View Bookings
                    </a>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Booking & Reviews Section -->
        <div class="col-lg-4">
            <!-- Booking Form -->
            <% if(currUser && !listing.owner._id.equals(currUser._id)) { %>
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0">₹<%= listing.price.toLocaleString("en-IN") %></h4>
                        <small class="text-muted">per night</small>
                    </div>
                    
                    <form action="/listings/<%= listing._id %>/book" method="POST" id="bookingForm">
                        <div class="mb-3">
                            <label for="checkIn" class="form-label fw-bold">Check-in</label>
                            <input type="date" class="form-control" id="checkIn" name="checkIn" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="checkOut" class="form-label fw-bold">Check-out</label>
                            <input type="date" class="form-control" id="checkOut" name="checkOut" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="guests" class="form-label fw-bold">Guests</label>
                            <select class="form-select" id="guests" name="guests" required>
                                <option value="1">1 guest</option>
                                <option value="2">2 guests</option>
                                <option value="3">3 guests</option>
                                <option value="4">4 guests</option>
                                <option value="5">5 guests</option>
                                <option value="6">6+ guests</option>
                            </select>
                        </div>
                        
                        <div class="mb-3 p-3 bg-light rounded">
                            <div class="d-flex justify-content-between mb-2">
                                <span>₹<%= listing.price %> x <span id="nights">0</span> nights</span>
                                <span id="priceCalculation">₹0</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between fw-bold">
                                <span>Total</span>
                                <span id="totalPrice">₹0</span>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn w-100" style="background-color: #fe424f; color: white; font-weight: 600;">
                            <i class="fa-solid fa-calendar-check"></i> Reserve
                        </button>
                        <p class="text-center text-muted small mt-2">You won't be charged yet</p>
                    </form>
                </div>
            </div>
            <% } else if(!currUser) { %>
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center p-4">
                    <i class="fa-solid fa-calendar-days fs-1 mb-3" style="color: #fe424f;"></i>
                    <h5 class="mb-2">Ready to book?</h5>
                    <p class="text-muted mb-3">Log in to reserve this amazing place</p>
                    <a href="/login" class="btn w-100" style="background-color: #fe424f; color: white;">Login to Book</a>
                </div>
            </div>
            <% } %>

            <!-- Leave a Review -->
            <% if(currUser) { %>
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Leave a Review</h5>
                    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>

                        <div class="mb-3">
                            <label for="comment" class="form-label">Comments</label>
                            <textarea name="review[comment]" id="comment" rows="4" class="form-control" required placeholder="Share your experience..."></textarea>
                            <div class="invalid-feedback">Please add your review.</div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" style="background-color: #fe424f; border: none;">
                            <i class="fa-solid fa-paper-plane"></i> Submit Review
                        </button>
                    </form>
                </div>
            </div>
            <% } else { %>
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body text-center">
                    <i class="fa-solid fa-star fs-1 text-warning mb-2"></i>
                    <h6 class="mb-2">Want to leave a review?</h6>
                    <p class="text-muted small mb-3">Please log in to share your experience</p>
                    <a href="/login" class="btn btn-primary btn-sm" style="background-color: #fe424f; border: none;">Login</a>
                </div>
            </div>
            <% } %>

            <!-- All Reviews -->
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">
                        <i class="fa-solid fa-comments"></i> Reviews 
                        <span class="badge bg-secondary"><%= listing.reviews.length %></span>
                    </h5>
                    
                    <% if(listing.reviews.length === 0) { %>
                        <div class="text-center text-muted py-4">
                            <i class="fa-regular fa-comment fs-1 mb-2"></i>
                            <p>No reviews yet. Be the first to review!</p>
                        </div>
                    <% } else { %>
                        <div class="reviews-container" style="max-height: 500px; overflow-y: auto;">
                            <% for(review of listing.reviews) { %>
                            <div class="review-item border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1 fw-bold">
                                            <i class="fa-solid fa-user-circle text-muted"></i> 
                                            <%= review.author ? review.author.username : 'Anonymous' %>
                                        </h6>
                                        <p class="starability-result mb-1" data-rating="<%= review.rating %>"></p>
                                    </div>
                                    <% if(currUser && review.author && review.author._id.equals(currUser._id)) { %>
                                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                        <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this review?')">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                    <% } %>
                                </div>
                                <p class="text-muted mb-0"><%= review.comment %></p>
                            </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Set minimum date to today
    const today = new Date().toISOString().split('T')[0];
    document.getElementById('checkIn').setAttribute('min', today);
    document.getElementById('checkOut').setAttribute('min', today);

    // Calculate price based on dates
    const pricePerNight = <%= listing.price %>;
    const checkInInput = document.getElementById('checkIn');
    const checkOutInput = document.getElementById('checkOut');
    const nightsSpan = document.getElementById('nights');
    const priceCalculationSpan = document.getElementById('priceCalculation');
    const totalPriceSpan = document.getElementById('totalPrice');

    function calculatePrice() {
        const checkIn = new Date(checkInInput.value);
        const checkOut = new Date(checkOutInput.value);

        if (checkIn && checkOut && checkOut > checkIn) {
            const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
            const total = pricePerNight * nights;

            nightsSpan.textContent = nights;
            priceCalculationSpan.textContent = '₹' + total.toLocaleString('en-IN');
            totalPriceSpan.textContent = '₹' + total.toLocaleString('en-IN');
        } else {
            nightsSpan.textContent = '0';
            priceCalculationSpan.textContent = '₹0';
            totalPriceSpan.textContent = '₹0';
        }
    }

    checkInInput.addEventListener('change', function() {
        const minCheckOut = new Date(this.value);
        minCheckOut.setDate(minCheckOut.getDate() + 1);
        checkOutInput.setAttribute('min', minCheckOut.toISOString().split('T')[0]);
        calculatePrice();
    });

    checkOutInput.addEventListener('change', calculatePrice);

    // Form validation
    document.getElementById('bookingForm').addEventListener('submit', function(e) {
        const checkIn = new Date(checkInInput.value);
        const checkOut = new Date(checkOutInput.value);

        if (checkOut <= checkIn) {
            e.preventDefault();
            alert('Check-out date must be after check-in date!');
        }
    });
</script>