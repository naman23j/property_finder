      <div class="navbar-nav">
       
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
     
          <div class="container-fluid">
            <form class="d-flex" role="search" action="/listings/search" method="GET">
              <input class="form-control me-2 search-inp" type="search" name="query" placeholder="Search Destinations" aria-label="Search">
              <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
